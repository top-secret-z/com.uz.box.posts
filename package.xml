<?xml version="1.0" encoding="UTF-8"?>
<package name="de.softcreatr.box.posts" xmlns="http://www.woltlab.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.woltlab.com https://www.woltlab.com/XSD/6.0/package.xsd">
    <packageinformation>
        <packagename>Box “Members with the most Posts”</packagename>
        <packagedescription>Adds a system box for the configurable display of the members with the most posts.</packagedescription>
        <packagename language="de">Box „Mitglieder mit den meisten Beiträgen“</packagename>
        <packagedescription language="de">Ergänzt eine System-Box zur konfigurierbaren Anzeige der Mitglieder mit den meisten Beiträgen.</packagedescription>
        <version>6.0.0</version>
        <date>2023-12-29</date>
        <license><![CDATA[LGPL <https://opensource.org/licenses/lgpl-license.php>]]></license>
    </packageinformation>

    <authorinformation>
        <author><![CDATA[SoftCreatR.dev]]></author>
        <authorurl><![CDATA[https://softcreatr.dev]]></authorurl>
    </authorinformation>

    <requiredpackages>
        <requiredpackage minversion="5.5.19">com.woltlab.wcf</requiredpackage>
        <requiredpackage minversion="5.5.19">com.woltlab.wbb</requiredpackage>
    </requiredpackages>

    <excludedpackages>
        <excludedpackage version="6.1.0 Alpha 1">com.woltlab.wcf</excludedpackage>
        <excludedpackage version="*">com.uz.box.posts</excludedpackage>
    </excludedpackages>

    <instructions type="install">
        <instruction type="file" application="wbb" />
        <instruction type="language" />
        <instruction type="template" application="wbb" />
        <instruction type="objectTypeDefinition" />
        <instruction type="objectType" />
        <instruction type="box" />
    </instructions>

    <instructions type="update" fromversion="*">
        <instruction type="file" application="wbb" />
        <instruction type="language" />
        <instruction type="template" application="wbb" />
        <instruction type="objectTypeDefinition" />
        <instruction type="objectType" />
        <instruction type="box" />
    </instructions>
</package>
